{

  "compilerOptions": {

    "target": "ESNext",

    "module": "CommonJS",

    "outDir": "./dist",

    "rootDir": ".",

    "strict": false,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",

    "allowJs": true,

    "checkJs": false,

    "types": ["node"],

    "noImplicitAny": false

  },

  "include": ["**/*.ts", "**/*.js", "global.ts"],

  "exclude": ["node_modules", "dist"]

}
